{
  "database": {
    "host": "localhost",
    "port": 5432,
    "name": "myapp_db",
    "user": "myapp_user",
    "password": "myapp_pass"
  },
  "logging": {
    "level": "INFO",
    "file_path": "logs/app.log",
    "max_file_size": 10485760,
    "backup_count": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "flask": {
    "secret_key": "your-secret-key-here",
    "debug": false,
    "host": "0.0.0.0",
    "port": 5000
  },
  "features": {
    "enable_registration": true,
    "enable_password_reset": true,
    "max_login_attempts": 3
  }
}